<?xml version="1.0" encoding="utf-8"?>
    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.graphycode.farmconnectdemo.Activities.ProductInfoActivity">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapse_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="#004D40"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/banner"
                    app:layout_collapseMode="parallax"
                    android:src="@drawable/cabbage"
                    android:scaleType="centerCrop"/>

                <android.support.v7.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:id="@+id/toolbar"
                    app:layout_collapseMode="pin"
                    android:theme="@style/AppTheme"/>


            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp">
                <android.support.v7.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:padding="5dp">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:id="@+id/txt_prod_info"
                           android:textColor="#008975"
                           android:textSize="20sp"
                           android:layout_alignParentTop="true"
                           android:text="Product Info"/>
                       <View
                           android:layout_width="match_parent"
                           android:layout_height="1dp"
                           android:background="#008975"
                           android:layout_marginBottom="10dp"
                           android:id="@+id/divider_1"
                           android:layout_below="@id/txt_prod_info"/>
                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:id="@+id/img_farm_name"
                           android:layout_below="@id/divider_1"
                           android:scaleType="centerCrop"
                           android:src="@drawable/ic_local_florist_black_24dp"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:id="@+id/farm_name"
                           android:textSize="18sp"
                           android:text="Darko Farms"
                           android:layout_below="@id/divider_1"
                           android:layout_toRightOf="@id/img_farm_name"
                           android:layout_marginLeft="24dp"
                           android:layout_marginBottom="15dp"/>
                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:id="@+id/img_prod_price"
                           android:scaleType="centerCrop"
                           android:layout_below="@id/farm_name"
                           android:src="@drawable/ic_local_offer_black_24dp"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:id="@+id/prod_price"
                           android:textSize="18sp"
                           android:text="GHC 1170"
                           android:layout_below="@id/farm_name"
                           android:layout_toRightOf="@+id/img_prod_price"
                           android:layout_marginLeft="24dp"
                           android:layout_marginBottom="15dp"/>
                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:id="@+id/im_prod_quantity"
                           android:scaleType="centerCrop"
                           android:layout_below="@id/prod_price"
                           android:src="@drawable/ic_shopping_basket_black_24dp"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:id="@+id/prod_quantity"
                           android:textSize="18sp"
                           android:text="24 Boxes"
                           android:layout_below="@id/prod_price"
                           android:layout_toRightOf="@id/img_prod_price"
                           android:layout_marginLeft="24dp"
                           android:layout_marginBottom="15dp"/>
                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:id="@+id/img_prod_loc"
                           android:scaleType="centerCrop"
                           android:layout_below="@id/prod_quantity"
                           android:src="@drawable/ic_place_black_24dp"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:id="@+id/txt_loc"
                           android:textSize="18sp"
                           android:text="Asaman Kese, ER"
                           android:layout_below="@id/prod_quantity"
                           android:layout_toRightOf="@id/img_prod_loc"
                           android:layout_marginLeft="24dp"
                           android:layout_marginBottom="15dp"/>
                       <!--<View
                           android:layout_width="match_parent"
                           android:layout_height="1dp"
                           android:background="#008975"
                           android:id="@+id/divider"
                           android:layout_below="@id/txt_loc"/>-->
                   </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="40dp"
                       android:id="@+id/map_link"
                       android:orientation="horizontal"
                       android:weightSum="3"
                       android:background="?android:attr/selectableItemBackground">
                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_weight="2"
                           android:src="@drawable/ic_map_black_24dp"
                           android:layout_gravity="center_vertical"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center_vertical"
                           android:id="@+id/txt_map_link"
                           android:layout_below="@+id/divider"
                           android:textSize="22sp"
                           android:textStyle="bold"
                           android:textColor="#008975"
                           android:text="View Location On Map" />
                   </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="20dp">
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:padding="5dp">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:id="@+id/txt_des"
                           android:textSize="20sp"
                           android:textColor="#008975"
                           android:text="Description"/>
                       <View
                           android:layout_width="match_parent"
                           android:layout_height="1dp"
                           android:background="#008975"
                           android:id="@+id/divider_2"
                           android:layout_below="@id/txt_des"/>

                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:id="@+id/desc"
                           android:layout_alignParentLeft="true"
                           android:layout_alignParentStart="true"
                           android:layout_below="@+id/divider_2"
                           android:inputType="textMultiLine"
                           android:maxLines="5"
                           android:scrollbars="vertical"
                           android:text="@string/lorem_ipsup" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/vid_desc_layout"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:background="?android:attr/selectableItemBackground">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            android:src="@drawable/ic_ondemand_video_black_24dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_vid_des"
                            android:layout_gravity="center_vertical"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#008975"
                            android:text="Video Description" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/aud_desc_layout"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:background="?android:attr/selectableItemBackground">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_audiotrack_black_24dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_aud_des"
                            android:layout_gravity="center_vertical"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#008975"
                            android:text="Audio Description" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="25dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt__contact"
                            android:textColor="#008975"
                            android:textSize="20sp"
                            android:layout_alignParentTop="true"
                            android:text="Contact"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#008975"
                            android:layout_marginBottom="10dp"
                            android:id="@+id/divider_3"
                            android:layout_below="@id/txt__contact"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_below="@+id/divider_3"
                            android:id="@+id/txt_phone"
                            android:textSize="20sp"
                            android:textColor="#008975"
                            android:text="+233503889047"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp"
                            android:layout_below="@+id/divider_3"
                            android:layout_alignParentRight="true"
                            android:padding="15dp"
                            android:id="@+id/call"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_call_black_24dp"
                            android:background="?android:attr/selectableItemBackground"/>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_cart_fab"
        app:fabSize="normal"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="bottom|right"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_add_shopping_cart_white_24dp"/>

</android.support.design.widget.CoordinatorLayout>
