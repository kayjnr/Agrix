<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/card_elevation"
    app:cardCornerRadius="4dp"
    android:layout_margin="@dimen/card_margin"
    android:background="#FFFFFF"
    android:id="@+id/grid">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/prod_img"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cabbage"/>
        <TextView
            android:id="@+id/prod_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="0dp"
            android:textStyle="bold"
            android:textColor="#00897B"
            android:text="cassava"
            android:layout_below="@id/prod_img"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/prod_price"
            android:textSize="12sp"
            android:padding="1dp"
            android:textColor="#00897B"
            android:layout_below="@+id/prod_name"
            android:text="GHS 50"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date1"
            android:textSize="12sp"
            android:padding="1dp"
            android:textColor="#00897B"
            android:layout_below="@+id/prod_price"
            android:text="EEE, MMM d, yy"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_alignBottom="@+id/prod_img"
            android:background="@drawable/farm_name_layout_bg"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="0dp"/>

            <TextView
                android:id="@+id/farm_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:padding="0dp"
                android:text="Darko Farms"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:background="@drawable/quantity_bg_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#008975"/>

            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:padding="5dp"
                android:textColor="#008975"
                android:textStyle="bold"
                android:text="200" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/ic_more"
            android:scaleType="fitXY"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:layout_below="@id/prod_price"
            android:layout_alignParentRight="true"
            android:background="?android:attr/selectableItemBackground"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>